        	$str = '请选择收货地址！';
        	$this->messag($str);
        }
        if (!$post['district']) {
        	$str = '请选择收货地址！';
        	$this->messag($str);
        }
        if (!$post['site']) {
        	$str = '请填写详细收货地址！';
