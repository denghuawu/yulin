function code(obj){
	if (obj.val() == '获取验证码') {
		obj.css({"color":"#b4b2b2",'backgroundColor':'#ecebeb'});
		shu(obj,60);

	};
}
function shu(obj,m){
	if (m>0) {
		obj.val(m+'秒后重新获取');
		m--;
		setTimeout(function(){
			shu(obj,m);
		},1000);
	}else if(m<=0){
		obj.val('获取验证码');
		obj.removeAttr('style');
	}
}
