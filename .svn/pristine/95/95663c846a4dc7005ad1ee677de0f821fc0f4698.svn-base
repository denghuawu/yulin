function express(){
	var p=0,k=0;
	$(".express_fee,.express_list_con ul").empty();
	for (var i = 0; i < $('.order_l li').length; i++) {
		p += Number($('.order_l li').eq(i).attr('weight')) * $('.order_l li').eq(i).find("input[name='num[]']").val();
	};
	if (par == null) {alert("该地区暂无快递支持");return;}
	else if (par.error) {alert(par.error);return;}
	for (var i = 0; i < par.length; i++) {
		if (isNaN(parseInt(par[i]['xu_z']))){continue;}
		var jiage= Math.ceil(par[i]['shou_z']) + Math.ceil(Math.ceil(p-1)*par[i]['xu_z']);
		var t= jiage > par[i]['min_price'] ? jiage : par[i]['min_price'];
		var oli=$('<li class="clearfix" express_id="'+par[i]['express_id']+'"><p class="f_r mr20"><span class=""><s></s></span></p><p><span class="express_name">'+par[i]['express_name']+'</span><span class="f1 ml10 price">￥'+t+'</span></p></li>');
		oli.click(function(){
			$("span.express_fee").html($(this).find("span.express_name").html()+'<span class="f1 price">'+$(this).find("span.price").html()+'</span>');
			$("#express_id").val($(this).attr('express_id'));
			myobj.input_money_total1($('.order_l li'),$('.order .total .f1'));
			$(".express_list_fixed").hide();
		})
		$(".express_list_con ul").eq(0).append(oli);
