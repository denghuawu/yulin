/**
 * 匹配权限代码
 * @param unknown $search
 * @param unknown $arr
 * @return boolean
 */
function in_arrays($search,$arr){
	 
	foreach ($search as $v){
		if(in_array($v['action_url'], $arr)){
			return true;
		}
	}
	 
	return false;
}

/**
 * 生成随机文件名
 * @param string $ext	文件后缀
 * @return number
 */
function rand_name($ext,$prefix=null){
	$randName = time() . rand(1000, 9999);
	$path = abs(crc32($randName) % 500).'.'.$ext;
	return $prefix.$path;
}


